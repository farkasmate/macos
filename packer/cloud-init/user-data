#cloud-config
autoinstall:
  version: 1
  locale: en_US.UTF-8
  keyboard:
    layout: us
  storage:
    layout:
      name: direct
  ssh:
    allow-pw: false
    install-server: true
  late-commands:
    - echo 'PubkeyAcceptedKeyTypes=+ssh-rsa' >> /target/etc/ssh/sshd_config.d/ssh-rsa.conf
  user-data:
    groups:
      - docker
      - rvm
      - vboxsf
    users:
      - name: matefarkas
        groups: adm, cdrom, dip, docker, lxd, plugdev, rvm, sudo, vboxsf
        primary_group: matefarkas
        shell: /bin/bash
        ssh_import_id:
          - gh:farkasmate
        sudo: ALL=(ALL) NOPASSWD:ALL
