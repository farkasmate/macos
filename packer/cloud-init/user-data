#cloud-config
autoinstall:
  version: 1
  locale: en_US.UTF-8
  keyboard:
    layout: us
  storage:
    swap:
      size: 4GB
    config:
    - id: disk-sda
      type: disk
      ptable: gpt
      grub_device: true
    - id: partition-grub
      type: partition
      device: disk-sda
      number: 1
      size: 1M
      flag: bios_grub
    - id: partition-root
      type: partition
      device: disk-sda
      number: 2
      size: -1
    - id: format-root
      type: format
      volume: partition-root
      fstype: ext4
    - id: mount-root
      type: mount
      device: format-root
      path: /
  ssh:
    allow-pw: false
    install-server: true
  late-commands:
    - echo 'PubkeyAcceptedKeyTypes=+ssh-rsa' >> /target/etc/ssh/sshd_config.d/ssh-rsa.conf
  user-data:
    users:
      - name: matefarkas
        groups: adm, cdrom, dip, lxd, plugdev, sudo
        primary_group: matefarkas
        shell: /bin/bash
        ssh_import_id:
          - gh:farkasmate
        sudo: ALL=(ALL) NOPASSWD:ALL
